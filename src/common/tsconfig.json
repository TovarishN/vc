{
	"compilerOptions": {
		"target": "es5",
		"sourceMap": true,
		"module": "CommonJS",
		"esModuleInterop": true,
		"declaration": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"types": ["node"],
		"incremental": true,
		"importHelpers": true,
		"rootDir": "./",
		"outDir": "../../build/common",
		"lib": [
			"ES5", "ES6","DOM"
		],
		"composite": true
	},
	"include": [
		"./**/*.ts"
	]
}